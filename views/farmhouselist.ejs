<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Farmhouses</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %> <!-- Include the header partial -->
  <div class="container">
    <h1>Available Farmhouses</h1>
    <div class="card-grid">
      <% farmhouses.forEach(farmhouse => { %>
        <div class="card">
          <img src="<%= farmhouse.images[0] %>" alt="<%= farmhouse.name %>">
          <div class="card-content">
            <h2><%= farmhouse.name %></h2>
            <p><strong>Location:</strong> <%= farmhouse.location %></p>
            <p><strong>Price:</strong> â‚¹<%= farmhouse.price %>/night</p>
            <p><%= farmhouse.description %></p>
            <div class="features">
              <% farmhouse.features.forEach(feature => { %>
                <span><%= feature %></span>
              <% }) %>
            </div>
            <a href="/farmhouse/<%= farmhouse._id %>" class="btn">View Details</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>